{
  "id": "PhotoshopExplorer",
  "name": "Project Explorer",
  "version": "0.5.0",
  "manifestVersion": 5,
  "main": "index.html",
  "host": [
    { "app": "PS", "minVersion": "26.11.1" }
  ],

  "permissions": {
    "filesystem": "fullAccess",
    "network": {
      "domains": ["127.0.0.1", "localhost"]
    }
  },

  "icons": [
    { "width": 32, "height": 32, "path": "icons/icon.png" }
  ],

  "entryPoints": [
    {
      "type": "panel",
      "id": "mainPanel",
      "label": "Project Explorer",
      "minimumSize": { "width": 250, "height": 700 },
      "preferredDockedSize": { "width": 300, "height": 800 },
      "icons": [
        { "width": 32, "height": 32, "path": "icons/icon.png" }
      ]
    }
  ]
}
